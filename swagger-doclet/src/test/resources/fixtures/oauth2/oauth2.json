{
  "openapi": "3.0",
  "info": {
    "version": "0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/"
    }
  ],
  "tags": [
    {
      "name": "/oauth2"
    }
  ],
  "paths": {
    "/oauth2/customScope": {
      "get": {
        "tags": ["/oauth2"],
        "operationId": "customScope",
        "security": [{ "oauth2": ["write:pets"] }],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/oauth2/customScopes": {
      "get": {
        "tags": ["/oauth2"],
        "operationId": "customScopes",
        "security": [{ "oauth2": ["write:pets", "read:pets"] }],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/oauth2/defaultAuth": {
      "get": {
        "tags": ["/oauth2"],
        "operationId": "defaultAuth",
        "security": [{ "oauth2": ["read:pets"] }],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/oauth2/defaultNoAuth": {
      "get": {
        "tags": ["/oauth2"],
        "operationId": "defaultNoAuth",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/oauth2/noAuth1": {
      "get": {
        "tags": ["/oauth2"],
        "operationId": "noAuth1",
        "security": [{}],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/oauth2/noAuth2": {
      "get": {
        "tags": ["/oauth2"],
        "operationId": "noAuth2",
        "security": [{}],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "https://example.com/api/oauth/dialog",
            "scopes": {
              "write:pets": "modify pets in your account",
              "read:pets": "read your pets"
            }
          },
          "authorizationCode": {
            "authorizationUrl": "https://example.com/api/oauth/dialog",
            "tokenUrl": "https://example.com/api/oauth/token",
            "scopes": {
              "write:pets": "modify pets in your account",
              "read:pets": "read your pets"
            }
          }
        }
      }
    }
  }
}
